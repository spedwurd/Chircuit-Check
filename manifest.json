{
  "manifest_version": 3,
  "name": "Chircuit Check",
  "description": "Product and Service Sustainability Analysis",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "images/Icon_16.png",
        "32": "images/Icon_32.png",
        "48": "images/Icon_48.png"
    }
  },
  "icons": {
    "16": "images/Icon_16.png",
    "32": "images/Icon_32.png",
    "48": "images/Icon_48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
